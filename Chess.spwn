extract obj_props
gs=import gamescene
follow=?g
follow.lock_to_player(lock_x=true,lock_y=false)
colors=[?c,?c]
colors[0].set(255,255,255)
colors[1].set(0,0,0)
for i in 0..8 {
  for n in 0..8 {
    $.add(obj{
      OBJ_ID:211,
      X:n*30+15,
      Y:i*30+15,
      COLOR:colors[(i+n)%2],
      GROUPS:follow
    })
  }
}
